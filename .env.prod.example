# Production Environment Variables for the-gossip-club.sebille.net
# Copy this file to .env.prod and update with your actual values

# Project Configuration
COMPOSE_PROJECT_NAME=gossip-club

# Database Configuration (External PostgreSQL)
# Use full connection string for external database
DATABASE_URL=postgresql://user:password@host:port/database

# API Configuration
API_PORT=3001
NEXT_PUBLIC_API_URL=https://api-the-gossip-club.sebille.net

# Australia App Configuration
NEXT_PUBLIC_AUSTRALIA_URL=https://the-gossip-club.sebille.net
NEXT_PUBLIC_AUSTRALIA_PORT=3010

# Security
JWT_SECRET=your-secure-jwt-secret-here
AUTH_SECRET=your-secure-auth-secret-here
API_ADMIN_TOKEN=your-secure-admin-token-here

# Optional: Development auth key (leave empty for production)
DEV_AUTH_KEY=

# Uploads
UPLOADS_DIR=/app/apps/api/uploads
