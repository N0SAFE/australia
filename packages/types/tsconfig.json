{
  "extends": "@repo-configs/typescript/config/base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@repo/ui/*": [
        "./*"
      ],
      "@repo/*": [
        "../*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "utils.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "../../packages/**/node_modules",
    "../../apps/**"
  ]
}