{
    "name": "@repo/ui",
    "version": "1.0.0",
    "sideEffects": [
        "**/*.css",
        "**/*.scss"
    ],
    "exports": {
        ".": {
            "types": ["./src/index.ts", "./src/index.tsx"],
            "import": "./dist/index.js",
            "require": "./dist/index.mjs"
        },
        "./*": {
            "types": ["./src/*.ts", "./src/*.tsx", "./src/*/index.ts", "./src/*/index.tsx"],
            "require": ["./dist/*.js", "./dist/*/index.js"],
            "import": ["./dist/*.mjs", "./dist/*/index.mjs"]
        },
        "./styles/globals.css": "./src/styles/globals.css",
        "./styles/_variables.scss": "./src/styles/_variables.scss",
        "./styles/_keyframe-animations.scss": "./src/styles/_keyframe-animations.scss",
        "./*.scss": "./src/*.scss",
        "./*.css": "./src/*.css"
    },
    "license": "MIT",
    "scripts": {
        "build": "bun scripts/build.ts",
        "compile": "bun x cross-env COMPILE_MODE=true bun run build",
        "clean": "rimraf dist",
        "dev": "bun run build -- --watch",
        "prettify": "bun x --bun prettier ./**/*.{ts,tsx,js,jsx,css} --write --no-error-on-unmatched-pattern",
        "lint": "eslint \"**/*.ts*\"",
        "type-check": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "ui:add": "bun x --bun shadcn add --"
    },
