{
    "extends": "@repo-configs/typescript/config/nextjs.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@repo/*": [
                "../*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tsup.config.ts",
        "../../packages/**/node_modules",
        "../../apps/**"
    ]
}